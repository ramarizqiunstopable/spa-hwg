{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "shims-vue.d.ts" // Tambahkan baris ini kalau belum ada
  ]
}
